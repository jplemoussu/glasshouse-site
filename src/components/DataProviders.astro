---
const base = import.meta.env.BASE_URL;

const providers = [
  { name: 'Interactive Brokers', logo: '' },
  { name: 'Massive', logo: '' },
  { name: 'Financial Modeling Prep', logo: '' },
  { name: 'SEC Filings', logo: '' },
];
---

<section class="px-6 py-24">
  <div class="mx-auto max-w-6xl">
    <h2 class="text-center text-3xl font-bold tracking-tight text-text-primary sm:text-4xl">
      Data & Broker Integrations
    </h2>
    <div class="mt-12 flex flex-wrap items-center justify-center gap-3">
      {providers.map((provider) => (
        <span class="flex items-center gap-2.5 rounded-full border border-border bg-bg-card px-5 py-2.5 text-sm text-text-secondary">
          {provider.logo && (
            <img src={provider.logo} alt="" class="h-5 w-5" loading="lazy" />
          )}
          {provider.name}
        </span>
      ))}
    </div>
  </div>
</section>
