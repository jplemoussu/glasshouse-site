<section class="px-6 py-24">
  <div class="mx-auto max-w-6xl space-y-12">

    <!-- Color swatches -->
    <div class="flex flex-wrap gap-4">
      <div class="flex flex-col items-center gap-2">
        <div class="h-16 w-16 rounded-lg bg-accent"></div>
        <span class="text-xs text-text-muted">Accent</span>
      </div>
      <div class="flex flex-col items-center gap-2">
        <div class="h-16 w-16 rounded-lg bg-secondary"></div>
        <span class="text-xs text-text-muted">Secondary</span>
      </div>
      <div class="flex flex-col items-center gap-2">
        <div class="h-16 w-16 rounded-lg bg-bg-card border border-border"></div>
        <span class="text-xs text-text-muted">Card</span>
      </div>
      <div class="flex flex-col items-center gap-2">
        <div class="h-16 w-16 rounded-lg bg-bg-elevated border border-border"></div>
        <span class="text-xs text-text-muted">Elevated</span>
      </div>
      <div class="flex flex-col items-center gap-2">
        <div class="h-16 w-16 rounded-lg border-2 border-border"></div>
        <span class="text-xs text-text-muted">Border</span>
      </div>
    </div>

    <!-- Text hierarchy -->
    <div>
      <h2 class="text-3xl font-bold text-text-primary">Primary heading text</h2>
      <h3 class="mt-2 text-xl font-semibold text-accent">Accent heading</h3>
      <h3 class="mt-2 text-xl font-semibold text-secondary">Secondary heading</h3>
      <p class="mt-2 text-lg text-text-secondary">Secondary text — descriptions and body copy.</p>
      <p class="mt-1 text-sm text-text-muted">Muted text — timestamps, labels, footnotes.</p>
    </div>

    <!-- Cards — all three color roles -->
    <div class="grid gap-6 sm:grid-cols-3">
      <div class="rounded-xl border border-border bg-bg-card p-6">
        <h3 class="text-lg font-semibold text-text-primary">Standard Card</h3>
        <p class="mt-2 text-sm text-text-secondary">Default card with border and elevated background.</p>
        <div class="mt-4 flex gap-2">
          <span class="rounded-full border border-border bg-bg-elevated px-3 py-1 text-xs text-text-muted">Badge</span>
          <span class="rounded-full bg-secondary/10 px-3 py-1 text-xs text-secondary">Status</span>
        </div>
      </div>
      <div class="rounded-xl border border-accent/30 bg-bg-card p-6">
        <h3 class="text-lg font-semibold text-accent">Accent Card</h3>
        <p class="mt-2 text-sm text-text-secondary">Primary accent border and heading.</p>
        <span class="mt-4 inline-block rounded-full bg-accent/10 px-3 py-1 text-xs text-accent">Active</span>
      </div>
      <div class="rounded-xl border border-secondary/30 bg-bg-card p-6">
        <h3 class="text-lg font-semibold text-secondary">Secondary Card</h3>
        <p class="mt-2 text-sm text-text-secondary">Secondary accent border and heading.</p>
        <div class="mt-4 flex gap-2">
          <span class="rounded-full bg-accent/10 px-3 py-1 text-xs text-accent">Python</span>
          <span class="rounded-full bg-secondary/10 px-3 py-1 text-xs text-secondary">asyncio</span>
        </div>
      </div>
    </div>

    <!-- Buttons — all three styles with both colors -->
    <div class="flex flex-wrap items-center gap-4">
      <button class="rounded-lg bg-accent px-6 py-3 text-sm font-medium text-white transition-colors hover:bg-accent-hover">
        Primary Action
      </button>
      <button class="rounded-lg bg-secondary px-6 py-3 text-sm font-medium text-white transition-colors hover:bg-secondary-hover">
        Secondary Action
      </button>
      <button class="rounded-lg border border-accent px-6 py-3 text-sm font-medium text-accent transition-colors hover:bg-accent/10">
        Outline Accent
      </button>
      <button class="rounded-lg border border-secondary px-6 py-3 text-sm font-medium text-secondary transition-colors hover:bg-secondary/10">
        Outline Secondary
      </button>
      <button class="rounded-lg border border-border px-6 py-3 text-sm font-medium text-text-secondary transition-colors hover:border-text-muted hover:text-text-primary">
        Ghost
      </button>
    </div>

    <!-- Divider -->
    <hr class="border-border" />

    <!-- Stat row — mixed accent usage -->
    <div class="grid grid-cols-2 gap-6 sm:grid-cols-4">
      <div class="rounded-lg border border-border bg-bg-card p-4 text-center">
        <p class="text-2xl font-bold text-accent">24/7</p>
        <p class="mt-1 text-xs text-text-muted">Monitoring</p>
      </div>
      <div class="rounded-lg border border-border bg-bg-card p-4 text-center">
        <p class="text-2xl font-bold text-secondary">5ms</p>
        <p class="mt-1 text-xs text-text-muted">Latency</p>
      </div>
      <div class="rounded-lg border border-border bg-bg-card p-4 text-center">
        <p class="text-2xl font-bold text-text-primary">100%</p>
        <p class="mt-1 text-xs text-text-muted">Local</p>
      </div>
      <div class="rounded-lg border border-border bg-bg-card p-4 text-center">
        <p class="text-2xl font-bold text-accent">∞</p>
        <p class="mt-1 text-xs text-text-muted">Instruments</p>
      </div>
    </div>

    <!-- Progress / accent bar -->
    <div class="space-y-3">
      <div class="h-2 w-full overflow-hidden rounded-full bg-bg-elevated">
        <div class="h-full w-3/4 rounded-full bg-accent"></div>
      </div>
      <div class="h-2 w-full overflow-hidden rounded-full bg-bg-elevated">
        <div class="h-full w-1/2 rounded-full bg-secondary"></div>
      </div>
    </div>

    <!-- FAQ-style detail -->
    <details class="group rounded-xl border border-border bg-bg-card">
      <summary class="flex cursor-pointer items-center justify-between px-6 py-4 text-text-primary [&::-webkit-details-marker]:hidden">
        <span class="font-medium">Sample FAQ with full palette context</span>
        <svg class="h-5 w-5 shrink-0 text-secondary transition-transform group-open:rotate-45" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
      </summary>
      <div class="px-6 pb-4">
        <p class="text-sm leading-relaxed text-text-secondary">Body text inside a card. Both <span class="text-accent">accent</span> and <span class="text-secondary">secondary</span> colors inline for emphasis.</p>
      </div>
    </details>

  </div>
</section>
