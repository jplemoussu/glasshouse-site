---
const technologies = [
  'Python',
  'asyncio',
  'pandas',
  'NumPy',
  'SQLite',
  'WebSocket',
  'REST API',
  'MCP',
];
---

<section id="tech-stack" class="px-6 py-24">
  <div class="mx-auto max-w-6xl">
    <h2 class="text-center text-3xl font-bold tracking-tight text-text-primary sm:text-4xl">
      Built with
    </h2>
    <div class="mt-12 flex flex-wrap items-center justify-center gap-3">
      {technologies.map((tech) => (
        <span class="rounded-full border border-border bg-bg-card px-4 py-2 text-sm text-text-secondary">
          {tech}
        </span>
      ))}
    </div>
  </div>
</section>
