---
import Layout from '../layouts/Layout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
---

<Layout>
  <Navbar />
  <main class="pt-20">
    <section class="px-6 py-24">
      <div class="mx-auto max-w-3xl">
        <h1 class="text-center text-3xl font-bold tracking-tight text-text-primary sm:text-4xl">
          Get in touch
        </h1>
        <p class="mt-4 text-center text-text-secondary">
          Glasshouse is currently in closed beta, open to friends and family only. If you're building something interesting at the intersection of finance and technology, let's connect.
        </p>
        <div class="mt-10 flex justify-center">
          <a
            href="mailto:hello@glasshouse.dev"
            class="rounded-full border border-border bg-bg-card px-8 py-3 text-sm font-medium text-text-primary transition-colors hover:border-text-muted hover:bg-bg-elevated"
          >
            hello@glasshouse.dev
          </a>
        </div>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
